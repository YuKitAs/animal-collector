<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="photo"
            type="yukitas.animal.collector.model.Photo" />
    </data>

    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp">

            <ImageView
                android:id="@+id/photo_content"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/content_desc_photo" />

            <TextView
                android:id="@+id/photo_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo_content"
                android:layout_alignStart="@+id/photo_content"
                android:layout_marginTop="10dp"
                android:text="@{photo.description}"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/photo_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo_description"
                android:layout_alignStart="@+id/photo_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/photo_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo_description"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/photo_date"
                android:text="@{photo.location.address}"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo_location"
                android:layout_alignStart="@+id/photo_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/photo_animals_label"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:contentDescription="@string/content_desc_photo"
                    android:src="@drawable/ic_test_image_1" />

                <TextView
                    android:id="@+id/photo_animals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_edit_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_margin="16dp"
            android:src="@drawable/ic_mode_edit_black_24dp"
            app:borderWidth="0dp"
            app:fabSize="normal" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_delete_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:src="@drawable/ic_delete_forever_black_24dp"
            app:backgroundTint="@android:color/holo_blue_dark"
            app:borderWidth="0dp"
            app:fabSize="normal" />
    </FrameLayout>
</layout>