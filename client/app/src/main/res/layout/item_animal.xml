<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="animal"
            type="yukitas.animal.collector.model.Animal" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="10dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_animal_bg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@string/content_desc_album"
                card_view:srcCompat="@android:color/darker_gray" />

            <TextView
                android:id="@+id/text_animal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/image_animal_bg"
                android:text="@{animal.name}"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/layout_animal_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_animal_name"
                android:layout_alignStart="@id/text_animal_name"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>